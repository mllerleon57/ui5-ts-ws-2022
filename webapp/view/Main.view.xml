<mvc:View
  controllerName="de.inwerken.pizzaApp.controller.Main"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:mvc="sap.ui.core.mvc"
>
  <Page id="page" title="{i18n>title}">
    <content>
      <f:GridList
        id="menuList"
        items="{path: '/ItemSet', sorter: {path: 'Type', group: true}}"
        class="sapUiContentPadding"
      >
        <f:customLayout>
          <grid:GridBoxLayout />
        </f:customLayout>
        <f:items>
          <f:GridListItem type="Active" press=".orderItem">
            <HBox
              justifyContent="SpaceBetween"
              class="sapUiSmallMargin"
              height="40px"
              renderType="Bare"
              alignItems="Center"
            >
              <Title text="{Name}" wrapping="true" />
              <Text text="{Price} {Currency}" width="70px" />
            </HBox>
            <HBox justifyContent="Center">
              <Image
                src="http://{Picture}"
                width="250px"
                height="170px"
                lazyLoading="true"
              />
            </HBox>
          </f:GridListItem>
        </f:items>
      </f:GridList>
    </content>
  </Page>
</mvc:View>
